<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/itmoaccel/db" VERSION="2026010700" COMMENT="ITMO accelerator tables"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd">

  <TABLES>

    <TABLE NAME="local_itmoaccel_projects" COMMENT="Projects">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" DEFAULT=""/>
        <FIELD NAME="isarchived" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timearchived" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="idx_user" UNIQUE="false" FIELDS="userid"/>
      </INDEXES>
    </TABLE>

    <TABLE NAME="local_itmoaccel_profiles" COMMENT="Student profile fields">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="school" TYPE="char" LENGTH="255" NOTNULL="false"/>
        <FIELD NAME="class" TYPE="char" LENGTH="50" NOTNULL="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="idx_user_unique" UNIQUE="true" FIELDS="userid"/>
      </INDEXES>
    </TABLE>

    <TABLE NAME="local_itmoaccel_supervisors" COMMENT="Supervisor assignment per project">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="projectid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="supervisorid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="timeassigned" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="idx_project_unique" UNIQUE="true" FIELDS="projectid"/>
        <INDEX NAME="idx_supervisor" UNIQUE="false" FIELDS="supervisorid"/>
      </INDEXES>
    </TABLE>

    <TABLE NAME="local_itmoaccel_stage_defs" COMMENT="Stage definitions (admin editable)">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="shortname" TYPE="char" LENGTH="100" NOTNULL="true"/>
        <FIELD NAME="title" TYPE="char" LENGTH="255" NOTNULL="true" DEFAULT=""/>
        <FIELD NAME="handlertype" TYPE="char" LENGTH="30" NOTNULL="true" DEFAULT="text"/>
        <FIELD NAME="sortorder" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="enabled" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="idx_shortname_unique" UNIQUE="true" FIELDS="shortname"/>
        <INDEX NAME="idx_sort" UNIQUE="false" FIELDS="sortorder"/>
      </INDEXES>
    </TABLE>

    <TABLE NAME="local_itmoaccel_submissions" COMMENT="Stage submissions per project">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="projectid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="stagedefid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="version" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="1"/>
        <FIELD NAME="status" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="datajson" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="timesubmitted" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="timedecided" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="deciderid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="decisioncomment" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="idx_proj_stage" UNIQUE="false" FIELDS="projectid,stagedefid"/>
      </INDEXES>
    </TABLE>

    <TABLE NAME="local_itmoaccel_materials" COMMENT="Learning materials">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="title" TYPE="char" LENGTH="255" NOTNULL="true" DEFAULT=""/>
        <FIELD NAME="sortorder" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="enabled" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="idx_sort" UNIQUE="false" FIELDS="sortorder"/>
      </INDEXES>
    </TABLE>
    
    <TABLE NAME="local_itmoaccel_participants" COMMENT="Approved participants">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="status" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="10"/>
        <FIELD NAME="timeapproved" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="idx_user_unique" UNIQUE="true" FIELDS="userid"/>
      </INDEXES>
    </TABLE>

    <TABLE NAME="local_itmoaccel_requests" COMMENT="Join requests student->supervisor">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="studentid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="supervisorid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="status" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="message" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timedecided" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="deciderid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="decisioncomment" TYPE="text" NOTNULL="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="idx_supervisor_status" UNIQUE="false" FIELDS="supervisorid,status"/>
        <INDEX NAME="idx_student_status" UNIQUE="false" FIELDS="studentid,status"/>
      </INDEXES>
    </TABLE>

    <TABLE NAME="local_itmoaccel_supervisor_codes" COMMENT="Supervisor join codes">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="supervisorid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="code" TYPE="char" LENGTH="32" NOTNULL="true"/>
        <FIELD NAME="enabled" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="idx_supervisor_unique" UNIQUE="true" FIELDS="supervisorid"/>
        <INDEX NAME="idx_code_unique" UNIQUE="true" FIELDS="code"/>
      </INDEXES>
    </TABLE>

  </TABLES>
</XMLDB>
